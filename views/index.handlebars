<div class="col-xs-6 text-center" class="task">
    <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
            <p>{{this.id}}. {{this.burger_name}}</p>
        </div>
        <div class="col-xs-3 text-center">
            <form method="POST" action="/burgers/update?_method=PUT">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}> <br>
                <button type="submit" class="btn btn-default">Eat the burger</button>
            </form>
        </div>
        {{/unless}}
        {{/each}}
    </div>
</div>
<div class="col-xs-6 text-center" class="task">
    {{#each burger_data}}
    {{#if this.devoured}}
    <ul>
        <li>{{this.id}}. {{this.burger_name}}</li>
    </ul>
    {{/if}}
    {{/each}}
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter Burger</p>
        </div>
    </div>
</div>